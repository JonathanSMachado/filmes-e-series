{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server (Node)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      // Importante para o React Router/Vite:
      "autoAttachChildProcesses": true
    },
    {
      "name": "Debug Client (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}",
      // Aguarda um pouco para garantir que o servidor subiu
      // (Ou vocÃª pode iniciar manualmente se preferir)
      "timeout": 30000
    }
  ],
  "compounds": [
    {
      "name": "Debug Full",
      "configurations": ["Debug Server (Node)", "Debug Client (Chrome)"],
      "stopAll": true
    }
  ]
}
